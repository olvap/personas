<%= table_for(@tdocs) do |t| %>
  <%= t.data do
    t.cell(:name)
    t.cell(:acciones, :heading => "Acciones", :cell_html => {:class => "acciones"}) do |tdoc|
      cell_content = link_to 'Detalles', tdoc
      cell_content += " | "
      cell_content += link_to 'Editar', edit_tdoc_path(tdoc)
      cell_content += " | "
      cell_content += link_to 'Borrar', tdoc, confirm: 'Are you sure?', method: :delete
    end
  end %>
<% end %>
