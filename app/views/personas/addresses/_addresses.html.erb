<%= table_for(@addresses) do |t| %>
  <%= t.data do
    t.cell(:format)
    t.cell(:telefono)
    t.cell(:email)
    t.cell(:taddress).try :name
    t.cell(:acciones, :heading => "Acciones", :cell_html => {:class => "acciones"}) do |address|
      cell_content = link_to 'Editar', "/personas/people/#{address.person.id}/addresses/#{address.id}/edit"
    end
  end %>
<% end %>
