<%= paginate @civils %>
<%= table_for(@civils) do |t| %>
  <%= t.data do
    t.cell(:name)
    t.cell(:acciones, :heading => "Acciones", :cell_html => {:class => "acciones"}) do |civil|
      cell_content = link_to 'Detalles', civil
      cell_content += " | "
      cell_content += link_to 'Editar', edit_civil_path(civil)
      cell_content += " | "
      cell_content += link_to 'Borrar', civil, confirm: 'Are you sure?', method: :delete
    end
  end %>
<% end %>
