<%= table_for(@taddresses) do |t| %>
  <%= t.data do
    t.cell(:name)
    t.cell(:acciones, :heading => "Acciones", :cell_html => {:class => "acciones"}) do |taddress|
      cell_content = link_to 'Detalles', taddress
      cell_content += " | "
      cell_content += link_to 'Editar', edit_taddress_path(taddress)
      cell_content += " | "
      cell_content += link_to 'Borrar', taddress, confirm: 'Are you sure?', method: :delete
    end
  end %>
<% end %>
